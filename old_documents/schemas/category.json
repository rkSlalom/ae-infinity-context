{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ae-infinity.local/schemas/category.json",
  "title": "CategoryDto",
  "description": "Product category for organizing shopping items",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique category identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Category name"
    },
    "icon": {
      "type": ["string", "null"],
      "maxLength": 50,
      "description": "Emoji or icon identifier"
    },
    "color": {
      "type": ["string", "null"],
      "pattern": "^#[0-9A-Fa-f]{6}$",
      "description": "Hex color code (e.g., #FF5733)"
    },
    "isDefault": {
      "type": "boolean",
      "description": "Whether this is a system-defined category"
    },
    "isCustom": {
      "type": "boolean",
      "description": "Whether this is a user-created category"
    },
    "sortOrder": {
      "type": "integer",
      "minimum": 0,
      "description": "Display order for sorting categories"
    }
  },
  "required": ["id", "name", "isDefault", "isCustom", "sortOrder"],
  "additionalProperties": false
}

