{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ae-infinity.local/schemas/purchase-history.json",
  "title": "PurchaseHistoryDto",
  "description": "Purchase history entry for an item",
  "type": "object",
  "properties": {
    "itemId": {
      "type": "string",
      "format": "uuid",
      "description": "Item identifier"
    },
    "itemName": {
      "type": "string",
      "description": "Name of the purchased item"
    },
    "listId": {
      "type": "string",
      "format": "uuid",
      "description": "List containing the item"
    },
    "listName": {
      "type": "string",
      "description": "Name of the list"
    },
    "purchasedBy": {
      "type": "string",
      "format": "uuid",
      "description": "User who made the purchase"
    },
    "purchasedByDisplayName": {
      "type": "string",
      "description": "Display name of purchaser"
    },
    "purchasedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the item was purchased"
    },
    "categoryName": {
      "type": ["string", "null"],
      "description": "Category of the item"
    },
    "quantity": {
      "type": "number",
      "minimum": 0,
      "description": "Quantity purchased"
    },
    "unit": {
      "type": ["string", "null"],
      "description": "Unit of measurement"
    }
  },
  "required": [
    "itemId",
    "itemName",
    "listId",
    "listName",
    "purchasedBy",
    "purchasedByDisplayName",
    "purchasedAt",
    "quantity"
  ],
  "additionalProperties": false
}

