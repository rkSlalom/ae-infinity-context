{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ae-infinity.local/schemas/list-basic.json",
  "title": "ListBasicDto",
  "description": "Minimal list information for nested references",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique list identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "List name"
    },
    "description": {
      "type": ["string", "null"],
      "description": "Optional list description"
    },
    "isArchived": {
      "type": "boolean",
      "description": "Whether the list is archived"
    }
  },
  "required": ["id", "name", "isArchived"],
  "additionalProperties": false
}

