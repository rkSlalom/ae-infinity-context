{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Search Query Parameters",
  "description": "Query parameters for searching lists and items",
  "type": "object",
  "properties": {
    "query": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Search term to match against list/item names and notes"
    },
    "scope": {
      "type": "string",
      "enum": ["all", "lists", "items"],
      "default": "all",
      "description": "Scope of search: all (lists + items), lists only, or items only"
    },
    "page": {
      "type": "integer",
      "minimum": 1,
      "default": 1,
      "description": "Page number for pagination (1-indexed)"
    },
    "pageSize": {
      "type": "integer",
      "minimum": 1,
      "maximum": 100,
      "default": 20,
      "description": "Number of results per page (max 100)"
    },
    "includeShared": {
      "type": "boolean",
      "default": true,
      "description": "Include lists/items from shared lists in search results"
    }
  },
  "required": ["query"],
  "examples": [
    {
      "query": "milk",
      "scope": "all",
      "page": 1,
      "pageSize": 20,
      "includeShared": true
    },
    {
      "query": "weekly",
      "scope": "lists",
      "page": 1,
      "pageSize": 20
    },
    {
      "query": "apples",
      "scope": "items",
      "page": 2,
      "pageSize": 10
    }
  ]
}

