{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ReorderItemsRequest",
  "description": "Request body for reordering items after drag-and-drop",
  "type": "object",
  "required": ["itemPositions"],
  "properties": {
    "itemPositions": {
      "type": "array",
      "minItems": 1,
      "description": "Array of item IDs with their new positions",
      "items": {
        "type": "object",
        "required": ["itemId", "position"],
        "properties": {
          "itemId": {
            "type": "string",
            "format": "uuid",
            "description": "Item ID to reposition",
            "example": "a1b2c3d4-e5f6-7890-abcd-ef1234567890"
          },
          "position": {
            "type": "integer",
            "minimum": 0,
            "description": "New position (0-based index)",
            "example": 0
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "itemPositions": [
        {
          "itemId": "a1b2c3d4-e5f6-7890-abcd-ef1234567890",
          "position": 0
        },
        {
          "itemId": "b2c3d4e5-f6g7-8901-bcde-fg2345678901",
          "position": 1
        },
        {
          "itemId": "c3d4e5f6-g7h8-9012-cdef-gh3456789012",
          "position": 2
        }
      ]
    }
  ]
}

