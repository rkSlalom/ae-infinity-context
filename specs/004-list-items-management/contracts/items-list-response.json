{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ItemsListResponse",
  "description": "Response for GET /lists/{listId}/items - includes items array, metadata, and permission",
  "type": "object",
  "required": ["items", "metadata", "permission"],
  "properties": {
    "items": {
      "type": "array",
      "description": "Array of list items",
      "items": {
        "$ref": "./item-response.json"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Summary statistics for the list",
      "required": ["totalCount", "purchasedCount", "unpurchasedCount", "allPurchased"],
      "properties": {
        "totalCount": {
          "type": "integer",
          "description": "Total number of items in list",
          "example": 8
        },
        "purchasedCount": {
          "type": "integer",
          "description": "Number of items marked as purchased",
          "example": 3
        },
        "unpurchasedCount": {
          "type": "integer",
          "description": "Number of items not yet purchased",
          "example": 5
        },
        "allPurchased": {
          "type": "boolean",
          "description": "True if all items are purchased",
          "example": false
        }
      },
      "additionalProperties": false
    },
    "permission": {
      "type": "string",
      "enum": ["Owner", "Editor", "Viewer"],
      "description": "Current user's permission level for this list",
      "example": "Editor"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "items": [
        {
          "id": "a1b2c3d4-e5f6-7890-abcd-ef1234567890",
          "listId": "7c9e6679-7425-40de-944b-e07fc1f90ae7",
          "name": "Milk",
          "quantity": 2,
          "unit": "gallons",
          "notes": null,
          "imageUrl": null,
          "category": {
            "id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
            "name": "Dairy",
            "icon": "ðŸ¥›",
            "color": "#E3F2FD"
          },
          "isPurchased": false,
          "position": 0,
          "createdBy": {
            "id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
            "displayName": "John Doe",
            "avatarUrl": null
          },
          "createdAt": "2025-11-05T10:00:00Z",
          "updatedAt": "2025-11-05T10:00:00Z",
          "purchasedAt": null,
          "purchasedBy": null
        }
      ],
      "metadata": {
        "totalCount": 8,
        "purchasedCount": 3,
        "unpurchasedCount": 5,
        "allPurchased": false
      },
      "permission": "Editor"
    }
  ]
}

