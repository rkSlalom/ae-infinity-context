{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AutocompleteResponse",
  "description": "Response for GET /lists/items/autocomplete?query={text} - suggestions from user's previous items",
  "type": "object",
  "required": ["suggestions"],
  "properties": {
    "suggestions": {
      "type": "array",
      "description": "Array of autocomplete suggestions ranked by frequency",
      "items": {
        "type": "object",
        "required": ["name", "quantity", "frequency"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Item name from previous lists",
            "example": "Milk"
          },
          "quantity": {
            "type": "number",
            "description": "Most common quantity for this item",
            "example": 2
          },
          "unit": {
            "type": ["string", "null"],
            "description": "Most common unit for this item",
            "example": "gallons"
          },
          "categoryId": {
            "type": ["string", "null"],
            "format": "uuid",
            "description": "Most common category for this item",
            "example": "3fa85f64-5717-4562-b3fc-2c963f66afa6"
          },
          "categoryName": {
            "type": ["string", "null"],
            "description": "Category name for display",
            "example": "Dairy"
          },
          "frequency": {
            "type": "integer",
            "description": "Number of times user has added this item",
            "example": 12
          }
        },
        "additionalProperties": false
      },
      "maxItems": 10
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "suggestions": [
        {
          "name": "Milk",
          "quantity": 2,
          "unit": "gallons",
          "categoryId": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
          "categoryName": "Dairy",
          "frequency": 12
        },
        {
          "name": "Bananas",
          "quantity": 6,
          "unit": "pieces",
          "categoryId": "d4e5f6g7-h8i9-0123-defg-hi4567890123",
          "categoryName": "Produce",
          "frequency": 8
        }
      ]
    }
  ]
}

