{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CreateItemRequest",
  "description": "Request body for creating a new item in a shopping list",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Item name (e.g., 'Milk', 'Bananas')",
      "example": "Organic Milk"
    },
    "quantity": {
      "type": "number",
      "minimum": 0.01,
      "default": 1,
      "description": "Quantity to purchase",
      "example": 2
    },
    "unit": {
      "type": ["string", "null"],
      "maxLength": 50,
      "description": "Unit of measurement (e.g., 'gallons', 'pieces', 'lbs')",
      "example": "gallons"
    },
    "categoryId": {
      "type": ["string", "null"],
      "format": "uuid",
      "description": "Optional category ID for organization",
      "example": "3fa85f64-5717-4562-b3fc-2c963f66afa6"
    },
    "notes": {
      "type": ["string", "null"],
      "maxLength": 500,
      "description": "Additional details or shopping instructions",
      "example": "Get the organic version, brand: Horizon"
    },
    "imageUrl": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "Optional image URL (future feature)",
      "example": "https://example.com/images/milk.jpg"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "name": "Milk",
      "quantity": 2,
      "unit": "gallons"
    },
    {
      "name": "Bananas",
      "quantity": 6,
      "unit": "pieces",
      "categoryId": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
      "notes": "Not too ripe"
    }
  ]
}

